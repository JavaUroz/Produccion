@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-dark">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="needs-validation p-4 bg-white rounded shadow" novalidate>
            <div class="form-floating m-4 mb-5">
                <img width="300" src="~/img/logo/logo-cestari-web.png" class="img-fluid ms-4" />
            </div>
            <hr/>
            <h2 class="mb-4">@ViewData["Title"]</h2>           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control mt-1" autocomplete="username" aria-required="true" required />
                <label asp-for="Input.Email" class="form-label"></label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Nombre" class="form-control mt-1" autocomplete="nombre" aria-required="true" required />
                <label asp-for="Input.Nombre" class="form-label"></label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Apellido" class="form-control mt-1" autocomplete="apellido" aria-required="true" required />
                <label asp-for="Input.Apellido" class="form-label"></label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" type="password" class="form-control mt-1" autocomplete="new-password" aria-required="true" required />
                <label asp-for="Input.Password" class="form-label"></label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control mt-1" autocomplete="new-password" aria-required="true" required />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-sm-end">
                <button id="registerSubmit" type="submit" class="btn btn-primary mt-2 p-3">Registrarse</button>
            </div>            
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
