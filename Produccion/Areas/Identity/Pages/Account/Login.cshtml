@page
@model LoginModel

@{
    ViewData["Title"] = "Acceder";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-dark">
    <div class="row">
        <div class="container d-flex justify-content-center align-items-center vh-100">
            <form id="account" method="post" class="needs-validation p-4 bg-white rounded shadow" novalidate>
                <div class="form-floating m-4 mb-5">
                    <img width="300" src="~/img/logo/logo-cestari-web.png" class="img-fluid ms-4"/>
                </div>
                <hr/>
                <h2>@ViewData["Title"]</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mt-1" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mt-1" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>                
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label mt-2">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>               
                <div class="d-flex justify-content-start">
                    <button id="login-submit" type="submit" class="btn btn-primary mt-2 ps-5 pe-5">Acceder</button>
                </div>
                <div>
                    <p class="mt-2">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
