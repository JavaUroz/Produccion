@using Producciones.Models

@model Programacion

@{
    ViewData["Title"] = "Eliminar orden de producción";
}

<h1>Eliminar programación de OP</h1>

<h3>¿Estás a punto de eliminar la siguente orden de producción, Deseas continuar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenProduccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrdenProduccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadProgramada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadProgramada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArticuloCod)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ArticuloCodNavigation.ArtDescGen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Proceso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Proceso.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsuarioId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProgramacion" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Volver</a>
    </form>
</div>
