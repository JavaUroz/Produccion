@using Producciones.Models

@model IEnumerable<Programacion>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de programaciones</h1>

<div class="d-flex justify-content-end">
    <a asp-action="Create" title="Cargar nueva programación">
        <img src="~/img/icons/agregar.svg" width="25" />
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrdenProduccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proceso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticuloCodNavigation)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.CantidadProgramada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrdenProduccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proceso.Nombre)
            </td>
            <td>
                @{
                    string codigo = item.ArticuloCod;
                    string nuevoFormato = $"{codigo.Substring(0, 2)}.{codigo.Substring(2, 2)}.{codigo.Substring(4)}";
                }
                @nuevoFormato - @Html.DisplayFor(modelItem => item.ArticuloCodNavigation.ArtDescGen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadProgramada)
            </td>                        
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Apellido), @Html.DisplayFor(modelItem => item.Usuario.Nombre)
            </td>
            <td class="d-flex justify-content-end">
                <div class="row">
                    <div class="col">
                            <a asp-action="Edit" asp-route-id="@item.IdProgramacion" title="Editar" class="mr-2">
                            <img src="~/img/icons/editar.svg" width="20" />
                        </a>
                    </div>
                    <div class="col">
                        <a asp-action="Details" asp-route-id="@item.IdProgramacion" title="Detalle">
                            <img src="~/img/icons/details.svg" width="20" />
                        </a>
                    </div>
                    <div class="col">
                            <a asp-action="Delete" asp-route-id="@item.IdProgramacion" title="Eliminar">
                            <img src="~/img/icons/borrar.svg" width="20" />
                        </a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
