@using Producciones.Models

@model Produccion

@{
    ViewData["Title"] = "Actualizar Datos de Producción";
}

<h1>Actualizar información</h1>

<h4>Producción</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProduccion" />
            <div class="form-group" hidden>
                <label asp-for="ProgramacionId" class="control-label"></label>
                <select asp-for="ProgramacionId" class="form-control" asp-items="ViewBag.Programacion"></select>
                <span asp-validation-for="ProgramacionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgramacionId" class="control-label"></label>
                <select asp-for="ProgramacionId" class="form-control" asp-items="ViewBag.Programacion" disabled></select>                
            </div>
            <div class="form-group">
                <label asp-for="PartesFaltantes" class="control-label"></label>
                <select asp-for="PartesFaltantes" class="form-control" id="mi-selector" asp-items="ViewBag.Articulo" multiple></select>
                <span asp-validation-for="PartesFaltantes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fin" class="control-label"></label>
                <input asp-for="Fin" class="form-control" />
                <span asp-validation-for="Fin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input asp-for="Foto" class="form-control" type="file"/>
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
