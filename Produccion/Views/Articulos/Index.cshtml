@using Producciones.Models

@model IEnumerable<Articulo>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Artículos</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<form asp-controller="Articulos" asp-action="CopyData" method="post">
    <button type="submit" class="btn btn-primary mt-2 mb-5" title="Obtener artículos actualizados de Bejerman">Actualizar</button>
</form>

<table id="table" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.art_CodGen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.art_DescGen)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.art_CodGen)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.art_DescGen)
            </td>
        </tr>
}
    </tbody>
</table>
