@model Producciones.Models.Proceso

@{
    ViewData["Title"] = "Modificar proceso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modificar</h1>

<h4>Proceso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProceso" />
            <div class="form-floating mt-1">
                <input asp-for="Nombre" class="form-control mt-1" aria-required="true" required />
                <label asp-for="Nombre" class="form-label"></label>
                <div class="invalid-feedback">
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
